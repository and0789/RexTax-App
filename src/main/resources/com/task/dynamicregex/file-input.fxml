<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.task.dynamicregex.controllers.FileInputController">
   <Label alignment="CENTER" layoutX="381.0" layoutY="40.0" prefHeight="86.0" styleClass="title" text="Input File" textAlignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <font>
         <Font name="Arial" size="40.0" />
      </font>
      <effect>
         <DropShadow height="20.0" radius="9.5" width="20.0">
            <color>
               <Color opacity="0.5" />
            </color>
         </DropShadow>
      </effect>
   </Label>
   <HBox layoutX="105.0" layoutY="172.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
      <TextField fx:id="fileTextField" disable="true" editable="false" prefHeight="40.0" HBox.hgrow="ALWAYS">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="browseButton" mnemonicParsing="false" onAction="#browseButtonOnAction" prefHeight="40.0" text="Browse">
         <font>
            <Font size="16.0" />
         </font>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </Button>
   </HBox>
   <HBox alignment="CENTER" layoutX="90.0" layoutY="315.0" spacing="20.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0">
      <Label text="Hash Code">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
      <TextField fx:id="hashCodeTextField" disable="true" editable="false" prefHeight="40.0" HBox.hgrow="ALWAYS">
         <font>
            <Font size="16.0" />
         </font></TextField>
   </HBox>
   <Button fx:id="backButton" layoutX="100.0" layoutY="510.0" mnemonicParsing="false" onAction="#backButtonOnAction" prefHeight="40.0" text="Back" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="100.0">
      <font>
         <Font size="15.0" />
      </font>
      <padding>
         <Insets left="20.0" right="20.0" />
      </padding>
   </Button>
   <HBox layoutX="365.0" layoutY="475.0" spacing="20.0" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="100.0">
      <Button fx:id="createHashCodeButton" disable="true" mnemonicParsing="false" onAction="#createHashCodeButtonOnAction" prefHeight="40.0" styleClass="green" text="Create Hash Code">
         <font>
            <Font size="15.0" />
         </font>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </Button>
      <Button fx:id="nextButton" disable="true" mnemonicParsing="false" onAction="#nextButtonOnAction" prefHeight="40.0" text="Next">
         <font>
            <Font size="15.0" />
         </font>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </Button>
   </HBox>
</AnchorPane>
